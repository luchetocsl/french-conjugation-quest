---
import Layout from "../layouts/Layout.astro";
import FrenchGame from "../components/FrenchGame";
import { sampleText } from "../data/exercisesSimple";

// Start with a random challenge, but allow navigation through all
const randomIndex = Math.floor(Math.random() * sampleText.length);
---

<Layout title='Pratique de Conjugaison Française'>
	<main
		class='min-h-screen bg-gradient-to-br from-blue-50 via-white to-indigo-50 py-12 px-4'>
		<div class='max-w-6xl mx-auto'>
			<h1 class='text-2xl font-bold text-center mb-8 text-gray-800'>
				Pratique de Conjugaison Française
			</h1>
			<FrenchGame
				challenges={sampleText}
				initialChallengeIndex={randomIndex}
				client:load
			/>
		</div>
	</main>
</Layout>
